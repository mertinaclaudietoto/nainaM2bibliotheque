        <!-- Content Container -->
        <div class="flex items-center justify-center min-h-[500px]">
            
            <!-- Login Card -->
            <div class="bg-white rounded-2xl shadow-xl p-8 w-full max-w-md">
                
                <!-- Logo -->
                <div class="flex items-center justify-center mb-6">
                    <div class="bg-blue-500 rounded-full p-2 mr-2">
                        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                            <circle cx="12" cy="12" r="10"></circle>
                        </svg>
                    </div>
                    <span class="text-xl font-bold text-gray-800">Bibliophilia</span>
                </div>

                <!-- Welcome Text -->
                <div class="text-center mb-8">
                    <h1 class="text-2xl font-bold text-gray-800 mb-2">Bienvenue!</h1>
                    <p class="text-sm text-gray-500"></p>
                </div>

                <!-- Login Form -->
        <form method="post" class="space-y-5">

            <!-- Nom -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                    Nom
                </label>
                <input
                    asp-for="Nom"
                    type="text"
                    placeholder="Votre nom"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg
                        focus:outline-none focus:ring-2 focus:ring-blue-500
                        focus:border-transparent transition"
                />
            </div>
            <!-- Prénom -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                    Prénom
                </label>
                <input
                    asp-for="Prenom"
                    type="text"
                    placeholder="Votre prénom"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg
                        focus:outline-none focus:ring-2 focus:ring-blue-500
                        focus:border-transparent transition"
                />
            </div>
            <!-- Email -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                    Email
                </label>
                <input
                    asp-for="Email"
                    type="email"
                    placeholder="Votre email"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg
                        focus:outline-none focus:ring-2 focus:ring-blue-500
                        focus:border-transparent transition"
                />
            </div>
            <!-- Login -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                    Login
                </label>
                <input
                    asp-for="Login"
                    type="text"
                    placeholder="Votre login"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg
                        focus:outline-none focus:ring-2 focus:ring-blue-500
                        focus:border-transparent transition"
                />
            </div>
            <!-- Mot de passe -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                    Mot de passe
                </label>
                <div class="relative">
                    <input
                        asp-for="Motdepasse"
                        type="password"
                        id="password"
                        placeholder="Votre mot de passe"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg
                            focus:outline-none focus:ring-2 focus:ring-blue-500
                            focus:border-transparent transition pr-12"
                    />
                    <button
                        type="button"
                        onclick="togglePassword()"
                        class="absolute right-3 top-1/2 -translate-y-1/2
                            text-gray-400 hover:text-gray-600 transition"
                    >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M2.458 12C3.732 7.943 7.523 5 12 5
                                    c4.478 0 8.268 2.943 9.542 7
                                    -1.274 4.057-5.064 7-9.542 7
                                    -4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                    </button>
                </div>
            </div>
            <!-- Date de naissance -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                    Date de naissance
                </label>
                <input
                    asp-for="DateNaissance"
                    type="date"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg
                        focus:outline-none focus:ring-2 focus:ring-blue-500
                        focus:border-transparent transition"
                />
            </div>
            <!-- Bouton inscription -->
            <button
                type="submit"
                class="w-full bg-blue-500 hover:bg-blue-600
                    text-white font-semibold py-3 rounded-lg
                    transition duration-200 shadow-md hover:shadow-lg"
            >
                S’inscrire
            </button>

        </form>

