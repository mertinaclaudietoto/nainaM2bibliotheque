                    <button class="text-gray-600 hover:text-blue-600">Outerwear</button>
                </div>
            </div>
            
           <div class="grid grid-cols-5 gap-6 mb-8">
            @if (Model.Livres != null && Model.Livres.Any())
            {
                @foreach (var livre in Model.Livres)
                {
                    <div class="bg-white rounded-lg shadow hover:shadow-lg transition">
                        <div class="relative">
                            @if (!string.IsNullOrEmpty(livre.LivrePhoto))
                            {
                                <img src="@livre.LivrePhoto" alt="@livre.LivreNom" class="w-full rounded-t-lg">
                            }
                            else
                            {
                                <img src="/api/placeholder/200/300" alt="@livre.LivreNom" class="w-full rounded-t-lg">
                            }
                        </div>
                        <div class="p-4">
                            <h3 class="text-sm font-semibold mb-2">@livre.LivreNom</h3>
                            <p class="text-gray-600 text-sm mb-1">Auteur: @livre.AuteurNom</p>
                            <p class="text-gray-600 text-sm mb-1">Genre: @livre.GenreNom</p>
                            <p class="text-gray-600 text-sm">Date Edition: @(livre.DateEdition?.ToString("yyyy-MM-dd") ?? "-")</p>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="col-span-5 text-center text-gray-600">Aucun livre disponible.</p>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="flex justify-center space-x-2">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <a asp-page="./Index" asp-route-pageNumber="@i"
                       class="px-4 py-2 border rounded @(i == Model.PageNumber ? "bg-blue-600 text-white" : "text-gray-600 hover:bg-gray-200")">
                        @i
                    </a>
                }
            </div>
        }

        </div>
    </section>

