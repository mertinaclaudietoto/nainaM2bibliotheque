@page
@model HistoriqueEmpruntModel
@{
    ViewData["Title"] = "Historique des emprunts";
}

<div class="max-w-6xl mx-auto px-6 py-10">

    <h1 class="text-2xl font-bold text-gray-800 mb-6">
        üìö Historique de vos emprunts
    </h1>

    @if (!Model.Emprunts.Any())
    {
        <div class="bg-yellow-100 text-yellow-800 p-4 rounded-lg">
            Aucun emprunt trouv√©.
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

            @foreach (var livre in Model.Emprunts)
            {
                <div class="bg-white rounded-xl shadow-md overflow-hidden flex">
                    
                    <!-- Image -->
                    <img src="@livre.LivrePhoto"
                         alt="@livre.LivreNom"
                         class="w-32 h-40 object-cover" />

                    <!-- Infos -->
                    <div class="p-4 flex-1">
                        <h2 class="text-lg font-semibold text-gray-800">
                            @livre.LivreNom
                        </h2>

                        <p class="text-sm text-gray-500">
                            Auteur : @livre.AuteurNom
                        </p>

                        <p class="text-sm text-gray-500">
                            Genre : @livre.GenreNom
                        </p>

                        <div class="mt-3 text-sm">
                            <p>
                                üìÖ Emprunt :
                                <span class="font-medium">
                                    @livre.DateEmprunt?.ToString("dd/MM/yyyy")
                                </span>
                            </p>

                            <p>
                                ‚è≥ Limite :
                                <span class="font-medium">
                                    @livre.DateLimite?.ToString("dd/MM/yyyy")
                                </span>
                            </p>

                            <p>
                                üîÅ Retour :
                                @if (livre.DateRetour != null)
                                {
                                    <span class="text-green-600 font-medium">
                                        @livre.DateRetour?.ToString("dd/MM/yyyy")
                                    </span>
                                }
                                else
                                {
                                    <span class="text-red-500 font-medium">
                                        Non retourn√©
                                    </span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
